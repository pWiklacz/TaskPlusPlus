{
  "ConnectionStrings": {
    "TaskPlusPlusConnectionString": "Server=(localdb)\\mssqllocaldb;Database=taskpp_db;Trusted_Connection=True;MultipleActiveResultSets=true"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "/logs/log-.txt",
          "rollingInterval": "Day",
          "rollOnFileSizeLimit": true,
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "MailSettings": {
    "Server": "smtp.ethereal.email",
    "Port": 587,
    "SenderName": "Your sender name",
    "SenderEmail": "Your sender email",
    "UserName": "",
    "Password": ""
  },
  "AllowedHosts": "*",
  "JwtSettings": {
    "Key": "JWTKEY",
    "Issuer": "JWTIssuer",
    "Audience": "JWTAudience",
    "DurationInMinutes": 120
  }
}
